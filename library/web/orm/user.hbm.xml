<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.library.command.User" table="user">
		<id name="userId" column="user_id">
			<generator class="increment">
				
			</generator>
		</id>
		<property name="userName"  column="user_name"/>	
		<property name="password"  column="password"/>
		<many-to-one name="userRole" class="com.library.command.UserRole"
			lazy="false" update="false">
			<column name="user_role_id"/>
		</many-to-one>
		<many-to-one name="contact" class="com.library.command.Contact"
			lazy="false" update="false">
			<column name="contact_id"/>
		</many-to-one>
		<property name="activeFlag"  column="active_flag"/>
		<property name="updatedBy"  column="updated_by"/>
		<property name="updatedDate"  column="updated_datetime"/>
	</class>
	<sql-query name="validateUser">
		<return class="com.library.command.User"/>
		<![CDATA[
			select * from user where user_name = :userName and password = :password
		]]>
	</sql-query>

</hibernate-mapping>